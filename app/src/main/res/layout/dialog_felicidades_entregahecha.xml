<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:gravity="center"
    android:layout_height="220dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ยก Felicidades !"
            android:textSize="20dp"
            android:layout_margin="20dp"
            style="@style/CardView.Light"
            android:gravity="center"
            android:textStyle="bold"/>
        <!--        android:textAllCaps="true" esto es para hacer mayuscula-->


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="20dp"
            android:text="Tu entrega a sido registrado exitosamente"/>

        <Button
            android:id="@+id/btnAceptarEntregaExitosa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btnredondeados"
            android:text="@string/txt_Aceptar"
            android:layout_gravity="center"></Button>


    </LinearLayout>

</androidx.cardview.widget.CardView>