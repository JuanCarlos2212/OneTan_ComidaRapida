        android:id="@+id/edtbreveDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Breve Descripcion"/>
    <Button
        android:layout_marginBottom="20dp"
        android:id="@+id/btnEntregaExitosa"
