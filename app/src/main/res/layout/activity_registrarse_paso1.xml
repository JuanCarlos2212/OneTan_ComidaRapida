<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegistrarsePaso1">

        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:src="@drawable/imagencuadrado">

        </ImageView>
    <View  android:layout_height="280dp"
        android:layout_width="match_parent"
        android:background="@drawable/degradadoinicio"
        ></View>

    <ImageView
        android:id="@+id/SplashLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginBottom="260dp"
        app:srcCompat="@drawable/logo_blanco"></ImageView>

    <FrameLayout

        android:layout_marginTop="170dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="28dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layout_redondeado"
        android:elevation="30dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="12dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_nuevaCuenta"
                android:gravity="center"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/edtNombresRe1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Nombres"
                />
            <EditText
                android:id="@+id/edtAppaternoRe1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Apellido Paterno"
                />

<!--            <com.google.android.material.textfield.TextInputLayout-->
<!--                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"-->
<!--                android:layout_width="match_parent"-->

<!--                android:layout_height="wrap_content">-->

<!--                <AutoCompleteTextView-->
<!--                    android:id="@+id/autoCompleteTextView"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:layout_width="180dp"-->
<!--                    android:layout_height="40dp"-->
<!--                    android:inputType="none"-->
<!--                    android:layout_margin="10dp"-->
<!--                    android:layout_weight="1"-->
<!--                    android:hint="Tipo de documento" />-->

<!--            </com.google.android.material.textfield.TextInputLayout>-->


            <EditText
                android:id="@+id/edtapMaternoRe1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Apellido Materno"
                />

            <Spinner
                android:id="@+id/spinnerRe1"
                android:background="@drawable/stilo_spiner"
                android:layout_gravity="center"
                android:layout_width="230dp"
                android:textAlignment="center"
                android:layout_height="46dp"
                android:elevation="20dp"
                android:layout_margin="5dp"
                android:entries="@array/list_spiner"
                />


            <EditText
                android:id="@+id/edtDocumentoRe1"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="N° de Documento"
                /><EditText
            android:id="@+id/edtCelularRe1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:inputType="number"
            android:hint="N° de Celular"
            />
            <Button
                android:id="@+id/btnSiguienteRe1"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:background="@drawable/btnredondeados"
                android:text="@string/btninicia_siguiente"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"></Button>
        </LinearLayout>

    </FrameLayout>
</FrameLayout>